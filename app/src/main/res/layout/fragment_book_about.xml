<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.mainflow.bookabout.BookAboutFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/cL"
          android:layout_width="match_parent"
          android:layout_height="281dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:background="#70174D84"
          android:paddingStart="15dp"
          android:paddingEnd="30dp"
          android:paddingTop="15dp">

          <ImageView
              android:id="@+id/ivBack"
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@drawable/ic_back"
              android:scaleType="centerCrop"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"/>

          <TextView
              android:id="@+id/tvName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Halqa"
              android:textColor="@color/white"
              android:textSize="26sp"
              app:layout_constraintStart_toEndOf="@id/ivBack"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toStartOf="@id/ivMenu"/>

          <ImageView
              android:id="@+id/ivMenu"
              android:layout_width="18dp"
              android:layout_height="18dp"
              android:src="@drawable/ic_menu"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          <TextView
              android:id="@+id/tvAuthor"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Muallif:"
              android:textColor="#DFDFDF"
              android:textSize="12sp"
              android:layout_marginTop="78dp"
              android:layout_marginStart="143dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toTopOf="@id/tvAuthorName"/>

          <TextView
              android:id="@+id/tvAuthorName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Akrom Malik"
              android:textColor="@color/white"
              android:textSize="14sp"
              android:layout_marginStart="143dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toTopOf="@id/tvRead"/>

          <TextView
              android:id="@+id/tvRead"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="O'qidi:"
              android:textColor="#DFDFDF"
              android:textSize="12sp"
              android:layout_marginStart="143dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toTopOf="@id/tvReadName1"/>

          <TextView
              android:id="@+id/tvReadName1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Abdukarim Mirzayev"
              android:textColor="@color/white"
              android:textSize="14sp"
              android:layout_marginStart="143dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toTopOf="@id/tvReadName2"/>

          <TextView
              android:id="@+id/tvReadName2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Shams Solih"
              android:textColor="@color/white"
              android:textSize="14sp"
              android:layout_marginStart="143dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toTopOf="@id/tvChap"/>

          <TextView
              android:id="@+id/tvChap"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="120-bob"
              android:textColor="#DFDFDF"
              android:textSize="12sp"
              android:layout_marginStart="143dp"
              android:layout_marginBottom="4dp"
              android:layout_marginTop="10dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/ivBook"
            android:layout_width="118dp"
            android:layout_height="162dp"
            android:layout_marginTop="152dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/halqa"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_headphone"
                            android:padding="3dp"
                            android:background="@color/white"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="2dp"
                        app:cardCornerRadius="8dp">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:padding="3dp">

                           <ImageView
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="1"
                               android:src="@drawable/ic_book_left"
                               android:background="@color/white"/>

                           <ImageView
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="1"
                               android:src="@drawable/ic_book_right"
                               android:background="@color/white"/>
                       </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rbRate"
            style="@style/Widget.MaterialRatingBar.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:rating="3.8"
            android:stepSize="0.01"
            android:layout_marginTop="7.33dp"
            android:layout_marginStart="17dp"
            app:mrb_progressBackgroundTint="#E8B006"
            app:mrb_progressTint="#E8B006"
            app:mrb_secondaryProgressTint="#E8B006"
            app:layout_constraintStart_toEndOf="@id/ivBook"
            app:layout_constraintTop_toBottomOf="@id/cL"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.8"
            android:textSize="12sp"
            android:textColor="#828282"
            android:layout_marginTop="7.33dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/cL"
            app:layout_constraintStart_toEndOf="@id/rbRate"/>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/ivBook"
            app:layout_constraintTop_toBottomOf="@id/rbRate"
            android:layout_marginStart="17dp"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 h 8 m"
                android:textSize="12sp"/>

            <View
                android:layout_marginHorizontal="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:background="#828282"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="76 mb"
                android:textSize="12sp"/>

            <View
                android:layout_marginHorizontal="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:background="#828282"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021"
                android:textSize="12sp"/>

            <View
                android:layout_marginHorizontal="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:background="#828282"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0+"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="37dp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardCornerRadius="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E2E2E2"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kitobni o'qish"
                        android:textSize="16sp"
                        android:textColor="#B3B9C0"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_marginStart="14dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_download_rectangle"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kitobga baho bering"
            android:textSize="12sp"
            android:textColor="#828282"
            android:layout_marginTop="28dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll2"/>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rbRateMy"
            style="@style/Widget.MaterialRatingBar.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:rating="3.8"
            android:stepSize="0.01"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            app:mrb_progressBackgroundTint="#4F4F4F"
            app:mrb_progressTint="#E8B006"
            app:mrb_secondaryProgressTint="#E8B006"
            app:layout_constraintTop_toBottomOf="@id/ll2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_dic"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rbRateMy"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#174D84B2"
            android:paddingStart="55dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingBottom="10dp"
                android:gravity="center_vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tvBookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Halqa"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tvBobCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 bob"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_download_blue_icon"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>

        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>