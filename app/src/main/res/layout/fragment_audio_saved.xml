<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient"
    tools:context=".fragment.mainflow.saved.audio.AudioSavedFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHalqa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:outlineSpotShadowColor="@color/main_color"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_book_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_jangchi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/round_corner" />

            <TextView
                android:id="@+id/tvBookJangchi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/str_jangchi"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/tvChapterJangchi"
                app:layout_constraintTop_toTopOf="@id/iv_book_image" />

            <TextView
                android:id="@+id/tvChapterJangchi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="2-bop, 20-bet"
                android:textColor="#9597A1"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/tvContinueJangchi"
                app:layout_constraintStart_toEndOf="@id/iv_book_image"
                app:layout_constraintTop_toBottomOf="@+id/tvBookJangchi" />


            <TextView
                android:id="@+id/tvContinueJangchi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/str_davom_ettirish"
                android:textColor="#177EE6"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_book_image"
                app:layout_constraintStart_toStartOf="@id/tvChapterJangchi" />

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvJangchi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:outlineSpotShadowColor="@color/main_color"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/cvHalqa">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivHalqa"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/halqa_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/round_corner" />

            <TextView
                android:id="@+id/tvBookHalqa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/str_halqa"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/ivHalqa"
                app:layout_constraintTop_toTopOf="@id/ivHalqa" />

            <TextView
                android:id="@+id/tvChapterHalqa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="2-bop, 20-bet"
                android:textColor="#9597A1"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/tvContinueHalqa"
                app:layout_constraintStart_toStartOf="@id/tvBookHalqa"
                app:layout_constraintTop_toBottomOf="@id/tvBookHalqa" />

            <TextView
                android:id="@+id/tvContinueHalqa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/str_davom_ettirish"
                android:textColor="#177EE6"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/ivHalqa"
                app:layout_constraintStart_toStartOf="@id/tvChapterHalqa" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>