<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFF"
    tools:context=".fragment.mainflow.saved.audio.AudioSVFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHalqa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivHalqa"
                android:layout_width="70dp"
                android:layout_height="87dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_halqa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/round_corner" />

            <TextView
                android:id="@+id/tvHalqa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/str_halqa"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tv_inform"
                app:layout_constraintLeft_toRightOf="@id/ivHalqa"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_inform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="2-bop, 20-bet"
                android:textColor="#9597A1"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/ivHalqa"
                app:layout_constraintTop_toBottomOf="@+id/tvHalqa" />



            <TextView
                android:id="@+id/tv_davom_ettirish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/str_davom_ettirish"
                android:textColor="#177EE6"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/ivHalqa"
                app:layout_constraintTop_toBottomOf="@+id/tv_inform" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvJangchi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/cvHalqa">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivJangchi"
                android:layout_width="70dp"
                android:layout_height="87dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_jangchi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/round_corner" />

            <TextView
                android:id="@+id/tvJangchi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/str_jangchi"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tv_inform1"
                app:layout_constraintLeft_toRightOf="@id/ivJangchi"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_inform1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="2-bop, 20-bet"
                android:textColor="#9597A1"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/ivJangchi"
                app:layout_constraintTop_toBottomOf="@+id/tvJangchi" />

            <TextView
                android:id="@+id/tv_davom_ettirish1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/str_davom_ettirish"
                android:textColor="#177EE6"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/ivJangchi"
                app:layout_constraintTop_toBottomOf="@+id/tv_inform1" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>